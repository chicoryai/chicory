{
  "name": "chicory-e2e-tests",
  "version": "1.0.0",
  "description": "E2E tests for Chicory/BrewHub application",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:smoke": "playwright test tests/smoke",
    "test:auth": "playwright test tests/auth",
    "test:integrations": "playwright test tests/integrations",
    "test:agents": "playwright test tests/agents",
    "test:api": "playwright test tests/api",
    "test:manage": "playwright test tests/manage",
    "test:golden-path": "playwright test tests/e2e/golden-path.spec.ts",
    "test:ci": "playwright test --reporter=github,html",
    "report": "playwright show-report reports/playwright-report",
    "codegen": "playwright codegen http://localhost:3000",
    "gate": "bash gate.sh"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@types/node": "^25.1.0",
    "dotenv": "^16.4.0",
    "typescript": "^5.3.0"
  }
}
