# Agent Service Environment Variables

# Anthropic API Key (required)
ANTHROPIC_API_KEY=your-api-key-here

# Service configuration
SERVICE_NAME=agent-service
DEBUG=false

# Redis URL for streaming updates
REDIS_URL=redis://localhost:6379
# Set to true for AWS MemoryDB (cluster mode)
REDIS_CLUSTER_MODE=false

# Backend API URL for callbacks
BACKEND_API_URL=http://localhost:8000

# MCP Server URLs (legacy - optional)
DB_MCP_SERVER_URL=
TOOLS_MCP_SERVER_URL=

# Chicory Platform MCP (optional)
# Uses SSE (Server-Sent Events) transport
CHICORY_MCP_BASE_URL=http://localhost:3000
CHICORY_MCP_API_KEY=

# Agent defaults
DEFAULT_MAX_TURNS=150
DEFAULT_MODEL=claude-sonnet-4-20250514

# Sandbox configuration
SANDBOX_ENABLED=true
SANDBOX_AUTO_ALLOW_BASH=true
